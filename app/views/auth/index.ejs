<% layout('../../layouts/default') -%>
<% block('title',' - Login')%>
<% script('/js/views/auth/index.js') -%>
<div class="row">
	<div class="col-sm-6">
		<div class="page-header"><h1>Sign in</h1></div>
		<div id="login">
			<form method='post' action="/login">
				<div class="form-group">
					<label>Username or Email:</label>
					<input type="text" name="username" class="form-control username required">
					<span class="help-block"></span>
				</div>
				<div class="form-group">
					<label>Password:</label>
					<input type="password" name="password" class="form-control password required">
					<span class="help-block"></span>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary btn-login">Sign In</button>&nbsp;
					<a href="" class="btn btn-link forgot">Forget your password?</a>
				</div>
			</form>
		</div>
	</div>
</div>

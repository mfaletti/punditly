<% layout('../../../layouts/admin') -%>
<% block('title',' - Manage Users')%>
<% stylesheet('/css/user.min.css') -%>
<% script('/js/views/admin/users/index.js') -%>
<div class="row">
	<div class="col-xs-12">
		<!--div class="alerts"></div-->
		<div id="header"></div>
		<div id="filters"></div>
		<div id="results-table"></div>
		<div id="results-paging"></div>
	</div>
</div>
<script type="text/template" id="tmpl-header">
<div class="page-header">
	<form class="form-inline pull-right">
		<div class="input-group">
			<input name="username" type="text" placeholder="enter a username" value="" class="form-control">
			<button type="button" class="btn btn-primary btn-add">Add New</button>
		</div>
	</form>
	<h1>Users</h1>
</div>
</script>
<script type="text/template" id="tmpl-filters">
<form class="filters">
	<div class='row'>
		<div class='col-sm-3'>
			<label>Username Search</label>
			<input name="username" type="text" class="form-control">
		</div>
		<div class='col-sm-3'>
			<label>Can Play Role</label>
			<select name='roles' class="form-control">
				<option value>any</option>
				<option value='admin'>admin</option>
				<option value='account'>account</option>
			</select>
		</div>
		<div class="col-sm-2">
			<label>Is Active</label>
			<select name="is_active" class="form-control">
				<option value="">either</option>
				<option value="true">yes</option>
				<option value="false">no</option>
			</select>
		</div>
		<div class="col-sm-2">
			<label>Sort By</label>
			<select name="sort" class="form-control">
				<option value="_id">id</option>
				<option value="username">username</option>
				<option value="email">email</option>
			</select>
		</div>
		<div class="col-sm-2">
			<label>Limit</label>
			<select name="limit" class="form-control">
				<option value="10">10 items</option>
				<option value="20" selected="selected">20 items</option>
				<option value="50">50 items</option>
				<option value="100">100 items</option>
			</select>
		</div>
	</div>
</form>
</script>
<script type="text/template" id="tmpl-results-table">
<table class='table table-striped'>
	<thead>
		<tr>
			<th></th>
			<th>username</th>
			<th class="stretch">email</th>
			<th>active</th>
			<th>id</th>
		</tr>
	</thead>
	<tbody id="results-rows"></tbody>
</table>
</script>
<script type="text/template" id="tmpl-results-row">
	<td><input type="button" value="Edit" class="btn btn-default btn-sm btn-details"></td>
	<td>{{= username}}</td>
	<td>{{= email}}</td>
	<td>{{= is_active}}</td>
	<td>{{= _id}}</td>
</script>
<script type="text/template" id="tmpl-results-paging">
	<div class="well">
		<div class="btn-group pull-left">
			<button class="btn btn-default" disabled>Page {{=pages.current}} of {{=pages.total}}</button>
			<button class="btn btn-default" disabled>Rows {{=items.begin}} - {{=items.end}} of {{=items.total}}</button>
		</div>
		<div class="btn-group pull-right">
			<button class="btn btn-default btn-page btn-prev" data-page="{{=pages.prev}}">Prev</button>
			<button class="btn btn-default btn-page btn-next" data-page="{{=pages.next}}">Next</button>
		</div>
		<div class="clearfix"></div>
	</div>
</script>
<script type="text/template" id="tmpl-results-empty-row"><tr><td colspan="5">No documents Matched</td></tr></script>

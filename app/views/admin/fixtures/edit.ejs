<% layout('../../../layouts/admin') -%>
<% block('title',' - Edit Fixture')%>
<% script('/js/views/admin/fixtures/edit.js') -%>
<div class="row">
	<div class="col-xs-12">
		<div id="header"></div>
		<div class="col-xs-5">
			<div id="identity"></div>
			<div id="delete"></div>
		</div>
	</div>
</div>
<script type="text/template" id="tmpl-header">
	<div class="page-header"><h1><a href="/admin/fixtures/">Fixtures</a> / {{=homeTeam}} vs {{=awayTeam}}</h1></div>
</script>
<script type="text/template" id="tmpl-identity">
<div class="alerts">
	{{ _.each(errors, function(err) { }}
	<div class="alert alert-danger alert-dismissable">
		<button class="close" type="button" data-dismiss="alert">&times;</button>{{= err }}
	</div>
	{{ }); }}
	{{ if (success) { }}
	<div class="alert alert-info alert-dismissable">
		<button class="close" type="button" data-dismiss="alert">&times;</button>Changes have been saved.
	{{ } }}
	</div>
</div>
<form id="fixture">
	<div id="home">
		<div class="form-group {{- errfor.homeTeam ? "has-error" : "" }}">
			<label>Home Team</label>
			<input class="form-control autocomplete" id="home-team" name="homeTeam" value="{{=homeTeam}}">
			<div class="suggestion" id="homeSuggest"></div>
			<span class="help=block">{{= errfor.homeTeam }}</span>
		</div>
	</div>
	<div id="away">
		<div class="form-group {{- errfor.awayTeam ? "has-error" : "" }}">
			<label>Away Team</label>
			<input class="form-control autocomplete" id="away-team" name="awayTeam" value="{{=awayTeam}}">
			<div class="suggestion" id="awaySuggest"></div>
			<span class="help-block">{{=errfor.awayTeam }}</span>
		</div>
	</div>
	<div class="form-group {{- errfor.competition ? "has-error" : "" }}">
		<label>League</label>
		<select class="form-control" id="league" name="league">
			<option value="">Select</option>
		</select>
		<span class="help-block">{{=errfor.competition }}</span>
	</div>
	<div class="form-group {{- errfor.date ? "has-error" : "" }}">
		<label>Date</label>
		<input class="form-control" id="datetimepicker" placeholder="Date" name="date" value="{{= moment(date).format('MMMM Do YYYY, h:mm A')}}">
		<span class="help-block">{{=errfor.date }}</span>
	</div>
	<button type="submit" class="btn btn-primary btn-update save">Submit</button>
</form>
</script>
<script type="text/template" id="tmpl-delete">
	<fieldset>
		<legend>Danger Zone</legend>
		<div class="alerts">
		{{ _.each(errors, function() { }}
			<div class="alert alert-danger alert-dismissible">
				<button class="close" type="button" data-dismiss="alert">&times;</button>{{- err}}
			</div>
		{{ }); }}
		</div>
		<div class="control-group">
			<span class="help-block">
				<span class="label label-danger">If you do this, it cannot be undone.</span>
			</span>
		</div>
		<div class="control-group">
			<button class="btn btn-danger btn-delete" type="button">Delete</button>
		</div>
	</fieldset>
</script>
<script type="text/template" id="data-results"><%-data.results%></script>